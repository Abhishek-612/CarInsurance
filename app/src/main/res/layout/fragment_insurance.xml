<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp"
    tools:context=".InsuranceFragment">


    <TextView
        android:layout_width="match_parent"
        android:id="@+id/useless"
        android:layout_height="match_parent"
        android:text="Insurance Details"
        android:textSize="30sp"
        android:paddingTop="@dimen/dp_24"
        android:paddingLeft="@dimen/dp_24"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/useless1"
        android:layout_height="match_parent"
        android:text="Bought on:"
        android:textSize="20sp"
        android:paddingTop="@dimen/dp_80"
        android:paddingLeft="@dimen/dp_24"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/bought_on"
        android:layout_height="match_parent"
        android:text="Bought on:"
        android:textSize="20sp"
        android:paddingTop="110dp"
        android:paddingLeft="@dimen/dp_24"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="165dp"
        android:layout_marginHorizontal="15dp"
        android:background="#6D6D6D" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/useless3"
        android:text="Monthly Premium:"
        android:textSize="20sp"
        android:paddingTop="180dp"
        android:paddingLeft="@dimen/dp_24"
        android:textColor="@color/colorAccent"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/prem"
        android:text="Monthly Premium:"
        android:textSize="20sp"
        android:paddingTop="210dp"
        android:paddingLeft="@dimen/dp_24"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginBottom="48dp">

        <TextView
            android:id="@+id/useless2"
            android:layout_width="241dp"
            android:layout_height="46dp"
            android:text="Balance:"
            android:textColor="@color/colorAccent"
            android:textSize="24sp" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/balance"
        android:text="Balance:"
        android:layout_gravity="right"
        android:textSize="24sp"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:id="@+id/raise_claim"
        android:text="Raise Claim"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"/>

</FrameLayout>